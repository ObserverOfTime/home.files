    \*.xbm,
    \*.xpm
    \ {ImageMagick} display %f %i &,
    \ {Eye of Gnome} eog %f %i &,
    \ {Gwenview} gwenview %f %i &,
    \ {GIMP} gimp %f %i &,
    \ {Krita} krita %f %i &
filextype *.svg,*.svgz
    \ {ImageMagick} display %f %i &,
    \ {Eye of Gnome} eog %f %i &,
    \ {Gwenview} gwenview %f %i &,
    \ {Inkscape} inkscape %f %i &,
    \ {Karbon} karbon %f %i &
fileviewer *.apng,
    \*.bmp,
    \*.gif,
    \*.ico,
    \*.icon,
    \*.j2k,
    \*.jp2,
    \*.jpeg,
    \*.jpf,
    \*.jpg,
